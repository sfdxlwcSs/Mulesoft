VALUES (:recid, :atype, :name)
ON DUPLICATE KEY UPDATE
  atype = IF(:atype IS NOT NULL, :atype, atype),
  name = IF(:name IS NOT NULL, :name, name);
]]></db:sql>
						</db:bulk-insert>
